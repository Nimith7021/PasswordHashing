@model PasswordHashingFluentMVC.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <style>

        .login-card {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        }

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
    </style>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body>
    @if (ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
    {
        <div class="alert alert-danger">

            <h1 class="display-2">Invalid Password or username!!!</h1>
        </div>
    }
    <div class="container login-container ">
        <div class="login-card card">
            <div class="card-body">
                <h5 class="card-title text-center"> User Login </h5>
                @using (Html.BeginForm("loginForm"))
                {
                    <div class="form-control">

                        @Html.DisplayNameFor(user => user.UserName)
                        @Html.EditorFor(user => user.UserName)
                    </div>
                    <div class="form-control">
                        @Html.DisplayNameFor(user => user.Password)
                        @Html.EditorFor(user => user.Password)
                    </div>
                    <div class="form-control text-center">
                        <input type="submit" value="Login" />
                    </div>

                }
                @Html.ActionLink("Create","Create")
            </div>

        </div>

    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
